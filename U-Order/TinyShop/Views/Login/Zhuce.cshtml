@{
    ViewData["Title"] = "注册";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>注册</title>
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
</head>
<body>
    <el-container id="box" style="width:30%;height:800px">
        <el-main>
            <el-form :model="user"
                     label-width="auto"
                     ref="form">
                <el-form-item label="用户名">
                    <el-input v-model="user.userName" placeholder="请输入用户名"></el-input>
                </el-form-item>
                <el-form-item label="密码">
                    <el-input v-model="user.password" placeholder="请输入密码"></el-input>
                </el-form-item>
                <el-form-item label="邮箱">
                    <el-input v-model="user.email" placeholder="请输入邮箱"></el-input>
                </el-form-item>
                <el-form-item label="性别">
                    <el-radio v-model="user.radio" label="boy">男</el-radio>
                    <el-radio v-model="user.radio" label="gril">女</el-radio>
                </el-form-item>
                <el-form-item label="所在地址">
                    <el-input v-model="user.city" placeholder="请输入详细地址"></el-input>
                </el-form-item>
                <el-form-item label="生日">
                    <el-date-picker v-model="user.date">
                    </el-date-picker>
                </el-form-item>

                <el-col>
                    <el-button type="primary" v-on:click="onAddButtonClick">注册</el-button>
                    <el-button v-on:click="onBackButtonClick">取消</el-button>
                </el-col>

            </el-form>
        </el-main>
    </el-container>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/element-ui/lib/index.js"></script>
    <script>
        const box = new Vue({
            el: '#box',
            data: {
                user: {
                    userName: '',
                    password:'',
                    email: '',
                    radio: '男',
                    city: '',
                    date: ''
                    
                }
            },
            methods: {
                async onAddButtonClick() {
                    
                    const response = await axios.post('/Login/Create', this.user);

                    if (response.data.code === 'success') {
                        this.$message({
                            message: '记录插入成功',
                            type: 'success'
                        });
                    } else {
                        this.$message({
                            message: '记录插入失败',
                            type: 'error'
                        });
                    }
                            
                      
                },
                onBackButtonClick() {
                    window.location = "/Login/Index";
                }
            }
        });
    </script>
</body>

</html>
